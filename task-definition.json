{
  "family": "trading-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/trading-api-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/trading-api-execution-role",
  "containerDefinitions": [
    {
      "name": "trading-api",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/trading-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SERVER_PORT",
          "value": "8080"
        }
      ],
      "secrets": [
        {
          "name": "MONGO_URI",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:trading-api/mongodb-uri"
        },
        {
          "name": "DISCORD_WEBHOOK",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:trading-api/discord-webhook"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/trading-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
